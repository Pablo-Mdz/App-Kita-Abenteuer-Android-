<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:elevation="4dp"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/tv_title_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="Title of the Event"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_date_hour_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_below="@id/tv_title_calendar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:text="02/10/2024"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_hour_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:text="16:30h"
            android:layout_marginEnd="40dp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="16sp"/>

    </LinearLayout>




</RelativeLayout>
