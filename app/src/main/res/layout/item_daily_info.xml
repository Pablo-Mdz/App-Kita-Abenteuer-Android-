<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:elevation="4dp"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/tv_title_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:text="Title of the info"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_description_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_daily"
        android:layout_marginTop="4dp"
        android:text="Description of the daily info"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description_daily"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_delete"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_open_url"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/tv_description_daily"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:text="OPEN LINK"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white" />

</RelativeLayout>
